<%
// ============================
// Caesar - Selectare cheie (1-25)
// ============================
%>
<div id="caesar-key-group" class="mb-3" style="display: none;">
  <label for="caesar-key" class="form-label">Cheie Caesar</label>
  <select class="form-select" id="caesar-key" name="caesarKey" required>
    <% for (let i = 1; i <= 25; i++) { %>
      <option value="<%= i %>"><%= i %></option>
    <% } %>
  </select>
</div>

<%
// ============================
// Affine - Selectare chei a și b
// ============================
%>
<div id="affine-options" class="mb-3" style="display: none;">
  <label class="form-label">Chei Affine (a, b)</label>
  <div class="d-flex gap-2">
    <select class="form-select" id="affine-a" name="affineA" required>
      <% function gcd(a, b) {
           while (b !== 0) [a, b] = [b, a % b];
           return a;
         }
         for (let i = 1; i <= 25; i += 2) {
           if (gcd(i, 26) === 1) { %>
             <option value="<%= i %>"><%= i %></option>
      <%   }
         } %>
    </select>
    <input type="number" class="form-control" id="affine-b" name="affineB" placeholder="b" min="0" max="25" required />
  </div>
  <div id="affine-warning" class="form-text text-danger mt-1 d-none"></div>
</div>

<%
// ============================
// Hill - Alegere dimensiune și introducere matrice
// ============================
%>
<div id="hill-options" class="mb-3" style="display: none;">
  <label for="hill-size" class="form-label">Dimensiune matrice Hill</label>
  <select id="hill-size" name="hillSize" class="form-select">
    <option value="2">2 x 2</option>
    <option value="3">3 x 3</option>
  </select>
  <div id="hill-warning" class="form-text text-danger mt-2 d-none"></div>
  <div id="hill-matrix-container" class="mt-3"></div>
</div>

<%
// ============================
// ECB / CBC - Introducere cheie simetrică
// ============================
%>
<div id="symmetric-key-group" class="mb-3" style="display: none;">
  <label for="symmetric-key" class="form-label">Cheie simetrică (ECB/CBC)</label>
  <input type="text" class="form-control" id="symmetric-key" name="symmetricKey" maxlength="32" />
</div>

<%
// ============================
// RSA - Introducere parametri p, q, e
// ============================
%>
<div id="rsa-options" class="mb-3" style="display: none;">
  <label class="form-label">Parametri RSA</label>
  <input type="number" class="form-control mb-2" id="rsa-p" name="rsaP" placeholder="p" />
  <input type="number" class="form-control mb-2" id="rsa-q" name="rsaQ" placeholder="q" />
  <input type="number" class="form-control mb-2" id="rsa-e" name="rsaE" placeholder="e" />
  <div id="rsa-warning" class="form-text text-danger d-none"></div>
</div>

<%
// ============================
// Bcrypt - Alegere număr de pași (salt rounds)
// ============================
%>
<div id="bcrypt-options" class="mb-3" style="display: none;">
  <label for="bcrypt-salt" class="form-label">Număr pași salt (rounds)</label>
  <select class="form-select" id="bcrypt-salt" name="bcryptSalt" required>
    <% for (let i = 4; i <= 14; i++) { %>
      <option value="<%= i %>"><%= i %></option>
    <% } %>
  </select>
</div>

<%
// ============================
// SHA-256 - Introducere salt
// ============================
%>
<div id="sha256-options" class="mb-3" style="display: none;">
  <label for="sha256-salt" class="form-label">Salt (SHA256)</label>
  <input
    type="text"
    class="form-control"
    id="sha256-salt"
    name="sha256Salt"
    required
    minlength="1"
    maxlength="32"
    pattern="[A-Za-z0-9]+"
    title="Salt-ul trebuie să conțină doar litere și cifre"
  />
</div>
