<%- include("partials/header", { title: "Cont creat" }) %>

<div class="text-center p-4">
  <div class="alert alert-success shadow-lg p-4" role="alert">
    <h2 class="mb-3">Cont creat cu succes!</h2>
    <p>Te poți autentifica acum folosind formularul de login.</p>
    <a href="/login" class="btn btn-primary mt-3 mb-2">Autentificare</a>

    <% if (details) { %>
      <hr class="my-4" />
      <h5 class="mt-3">Detalii criptare:</h5>
      <p><strong>Metodă:</strong> <%= details.method %></p>
      <p><strong>Parolă originală:</strong> <%= details.originalPassword %></p>
      <p><strong>Rezultatul criptat:</strong> <span style="word-break: break-all"><%= details.encryptedPassword %></span></p>
      <hr class="my-4" />
      <h5>Timp criptare:</h5>
      <p><%= details.encryptionTime %> ms</p>
    <% } %>
  </div>
</div>

<%- include("partials/footer") %>
