<%- include('partials/header', { title: "Cont creat cu succes" }) %>

<div class="d-flex justify-content-center align-items-center flex-grow-1">
  <div class="card shadow p-5 w-100" style="max-width: 700px;">
    <h2 class="mb-4 text-center">Cont creat cu succes!</h2>
    <p class="text-center">Te poți autentifica acum folosind formularul de login.</p>

    <div class="text-center mt-3 mb-4">
      <a href="/login" class="btn btn-primary">Autentificare</a>
    </div>

    <% if (details) { %>
      <hr />
      <h5 class="mt-4">Detalii criptare:</h5>
      <ul class="list-group mt-3">
        <li class="list-group-item"><strong>Nume utilizator:</strong> <%= details.username %></li>
        <li class="list-group-item"><strong>Parola introdusă:</strong> <%= details.originalPassword %></li>
        <li class="list-group-item">
          <strong>Rezultatul criptat:</strong> <%= details.encryptedPassword %>
        </li>
        <li class="list-group-item"><strong>Metodă aleasă:</strong> <%= details.method %></li>
        <li class="list-group-item"><strong>Timp criptare:</strong> <%= details.encryptionTime %> ms</li>
      </ul>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
