<!-- Caesar -->
<div id="caesar-key-group" class="mb-3" style="display: none;">
  <label for="caesar-key" class="form-label">Cheie Caesar</label>
  <input type="number" id="caesar-key" name="caesarKey" class="form-control"
         placeholder="Valoare între 1 și 25" min="1" max="25" required/>
</div>

<!-- Affine -->
<div id="affine-options" class="mb-3" style="display: none;">
  <label for="affine-a" class="form-label">a (cheie multiplicativă)</label>
  <input type="number" id="affine-a" name="affineA" class="form-control" required />

  <label for="affine-b" class="form-label mt-2">b (cheie aditivă)</label>
  <input type="number" id="affine-b" name="affineB" class="form-control" required />
</div>

<!-- Cifrul Hill -->
<div id="hill-options" class="mb-3" style="display: none;">
  <label for="hill-size" class="form-label">Dimensiune matrice Hill</label>
  <select id="hill-size" class="form-select">
    <option value="2">2x2</option>
    <option value="3">3x3</option>
  </select>
  <div id="hill-matrix-container" class="mt-3"></div>
</div>

<!-- ECB / CBC -->
<div id="symmetric-key-group" class="mb-3" style="display: none;">
  <label for="symmetric-key" class="form-label">Cheie de criptare</label>
  <input type="text" id="symmetric-key" name="symmetricKey" class="form-control"
         placeholder="Ex: SECUREKEY123" maxlength="32" minlength="4" />
</div>

<!-- RSA -->
<div id="rsa-options" class="mb-3" style="display: none;">
  <label class="form-label">Parametri RSA</label>
  <input type="number" id="rsa-p" name="rsa[p]" class="form-control mb-2" placeholder="p (prim)" />
  <input type="number" id="rsa-q" name="rsa[q]" class="form-control mb-2" placeholder="q (prim)" />
  <input type="number" id="rsa-e" name="rsa[e]" class="form-control" placeholder="e (exponent public)" />
  <div id="rsa-warning" class="alert alert-warning mt-2 d-none"></div>
</div>


