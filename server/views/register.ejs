<%- include('partials/header', { title: "Înregistrare utilizator" }) %>

<div class="card shadow p-4" style="width: 100%; max-width: 450px;">
  <h2 class="text-center mb-4">Creare cont nou</h2>

  <form id="register-form" autocomplete="off">
    <div class="mb-3">
      <label for="username" class="form-label">Nume utilizator</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        required
        minlength="3"
        maxlength="20"
      />
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Parolă</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
        minlength="3"
        maxlength="30"
        pattern="[A-Za-z]+"
        title="Doar litere A–Z (fără cifre, spații sau simboluri)"
      />
    </div>

    <div class="mb-3">
      <label for="register-method" class="form-label">Metodă de criptare</label>
      <select class="form-select" id="register-method" name="method" required>
        <%- include('partials/encryption-methods') %>
        <input type="hidden" id="hill-matrix" name="hill" />
      </select>
    </div>

    <%- include('partials/method-options') %>

    <button type="submit" class="btn btn-primary w-100">Creează cont</button>
  </form>

  <!-- 🔔 mesaj dinamic afișat de register.js -->
  <div id="register-message" class="alert d-none mt-3 text-center"></div>
</div>

<script type="module" src="/js/method-options.js"></script>
<script type="module" src="/js/register.js"></script>

<%- include('partials/footer') %>
